{
  "name": "your-sofia-api",
  "version": "1.0.0",
  "description": "YourSofia Mobile Application Backend and Administrative UI built using Payload CMS",
  "license": "EUPL-1.2",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=--no-deprecation next build",
    "postbuild": "next-sitemap --config next-sitemap.config.cjs",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev",
    "dev:prod": "cross-env NODE_OPTIONS=--no-deprecation rm -rf .next && pnpm build && pnpm start",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "ii": "cross-env NODE_OPTIONS=--no-deprecation pnpm --ignore-workspace install",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
    "lint:fix": "cross-env NODE_OPTIONS=--no-deprecation next lint --fix",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "reinstall": "cross-env NODE_OPTIONS=--no-deprecation rm -rf node_modules && rm pnpm-lock.yaml && pnpm --ignore-workspace install",
    "seed:waste-containers": "cross-env NODE_OPTIONS=--no-deprecation payload run ./src/scripts/seedWasteContainers.ts",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@payloadcms/admin-bar": "3.67.0",
    "@payloadcms/db-postgres": "3.67.0",
    "@payloadcms/live-preview-react": "3.67.0",
    "@payloadcms/next": "3.67.0",
    "@payloadcms/payload-cloud": "3.67.0",
    "@payloadcms/plugin-form-builder": "3.67.0",
    "@payloadcms/plugin-import-export": "3.67.0",
    "@payloadcms/plugin-nested-docs": "3.67.0",
    "@payloadcms/plugin-redirects": "3.67.0",
    "@payloadcms/plugin-search": "3.67.0",
    "@payloadcms/plugin-seo": "3.67.0",
    "@payloadcms/richtext-lexical": "3.67.0",
    "@payloadcms/ui": "3.67.0",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "expo-server-sdk": "^4.0.0",
    "geist": "^1.5.1",
    "graphql": "^16.12.0",
    "lucide-react": "^0.378.0",
    "next": "^15.5.7",
    "next-sitemap": "^4.2.3",
    "payload": "3.67.0",
    "prism-react-renderer": "^2.4.1",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-hook-form": "7.45.4",
    "sharp": "0.32.6",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@tailwindcss/typography": "^0.5.19",
    "@types/escape-html": "^1.0.4",
    "@types/node": "^22.19.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.22",
    "copyfiles": "^2.4.1",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.1",
    "eslint-config-next": "15.2.3",
    "eslint-plugin-react-hooks": "^5.2.0",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "tailwindcss": "^3.4.18",
    "typescript": "5.7.3"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": ">=9"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp"
    ]
  }
}
