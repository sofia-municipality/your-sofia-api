# Production Environment Variables
# Copy this file to .env.production and update with your production values

# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=your-sofia
POSTGRES_PORT=5432

# API Configuration
API_PORT=3000

# Payload CMS Secrets (MUST BE CHANGED IN PRODUCTION)
PAYLOAD_SECRET=CHANGE_ME_GENERATE_RANDOM_STRING_32_CHARS
CRON_SECRET=CHANGE_ME_GENERATE_RANDOM_STRING_32_CHARS
PREVIEW_SECRET=CHANGE_ME_GENERATE_RANDOM_STRING_32_CHARS

# Server URL (Update with your domain)
NEXT_PUBLIC_SERVER_URL=https://api.your-sofia.bg

# Node Environment
NODE_ENV=production

# Optional: Database backup retention (days)
BACKUP_RETENTION_DAYS=30
