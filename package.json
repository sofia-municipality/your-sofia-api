{
  "name": "your-sofia-api",
  "version": "1.0.0",
  "description": "YourSofia Mobile Application Backend and Administrative UI built using Payload CMS",
  "license": "EUPL-1.2",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=--no-deprecation next build",
    "postbuild": "next-sitemap --config next-sitemap.config.cjs",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev",
    "dev:prod": "cross-env NODE_OPTIONS=--no-deprecation rm -rf .next && pnpm build && pnpm start",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "ii": "cross-env NODE_OPTIONS=--no-deprecation pnpm --ignore-workspace install",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
    "lint:fix": "cross-env NODE_OPTIONS=--no-deprecation next lint --fix",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "reinstall": "cross-env NODE_OPTIONS=--no-deprecation rm -rf node_modules && rm pnpm-lock.yaml && pnpm --ignore-workspace install",
    "seed:waste-containers": "cross-env NODE_OPTIONS=--no-deprecation payload run ./src/scripts/seedWasteContainers.ts",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "dependencies": {
    "@payloadcms/admin-bar": "3.68.4",
    "@payloadcms/db-postgres": "3.68.4",
    "@payloadcms/live-preview-react": "3.68.4",
    "@payloadcms/next": "3.68.4",
    "@payloadcms/payload-cloud": "3.68.4",
    "@payloadcms/plugin-form-builder": "3.68.4",
    "@payloadcms/plugin-import-export": "3.68.4",
    "@payloadcms/plugin-nested-docs": "3.68.4",
    "@payloadcms/plugin-redirects": "3.68.4",
    "@payloadcms/plugin-search": "3.68.4",
    "@payloadcms/plugin-seo": "3.68.4",
    "@payloadcms/richtext-lexical": "3.68.4",
    "@payloadcms/translations": "^3.73.0",
    "@payloadcms/ui": "3.68.4",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "expo-server-sdk": "^4.0.0",
    "geist": "^1.5.1",
    "graphql": "^16.11.0",
    "lucide-react": "^0.561.0",
    "next": "^15.5.9",
    "next-sitemap": "^4.2.3",
    "payload": "3.68.4",
    "prism-react-renderer": "^2.4.1",
    "react": "^19.1",
    "react-dom": "^19.1",
    "react-hook-form": "^7.68.0",
    "sharp": "0.32.6",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@tailwindcss/typography": "^0.5",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/escape-html": "^1.0.4",
    "@types/jest": "^29.5.12",
    "@types/node": "22.5.4",
    "@types/react": "19.0.12",
    "@types/react-dom": "19.0.4",
    "@types/supertest": "^6.0.2",
    "autoprefixer": "^10.4.21",
    "copyfiles": "^2.4.1",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.39.2",
    "eslint-config-next": "^15.5.9",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "supertest": "^7.0.0",
    "tailwindcss": "^3.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "5.7.3",
    "husky": "^9.1.7"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": ">=9"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp"
    ]
  }
}
